<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动连击助手"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="点击启动按钮后，会在屏幕上显示一个浮动小球。\n小球包含选择、开始和暂停功能，可以指定位置进行自动连击。"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText" />

    <Button
        android:id="@+id/startFloatingButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="启动浮动窗口"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_start_background"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptionText" />

    <Button
        android:id="@+id/stopFloatingButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="关闭浮动窗口"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_stop_background"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startFloatingButton" />

    <Button
        android:id="@+id/checkPermissionsButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="检查权限"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_check_background"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stopFloatingButton" />

    <TextView
        android:id="@+id/instructionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="使用说明：\n1. 首次使用需要授予悬浮窗权限和无障碍服务权限\n2. 点击启动浮动窗口后，屏幕上会出现一个红色小球\n3. 点击小球上的'选'按钮选择要连击的位置\n4. 点击'始'按钮开始自动连击\n5. 点击'停'按钮停止连击\n6. 点击'×'按钮关闭浮动窗口"
        android:textSize="12sp"
        android:textColor="#999999"
        android:gravity="start"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkPermissionsButton" />

</androidx.constraintlayout.widget.ConstraintLayout>